<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.title %></title>
    <link href="/assets/style.css" rel="stylesheet">
</head>
<body>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dompurify/2.3.3/purify.min.js"></script>
    <!-- Header start -->
    <%-include('partials/header'); %>
    <!-- Header end -->

    <div class="container mx-auto mt-8">
        <div class="bg-white rounded-lg shadow-md p-8 mx-auto">
            <div class="rounded-lg p-6 flex flex-col items-center">
                <h1 class="text-3xl font-bold mb-4"><%= post.title %></h1>
                <p class="text-gray-700 mb-6">Published on March 4, 2024</p>
                <img src="https://via.placeholder.com/470x400" alt="Article Image" class="mb-6">
                <!-- Tidak perlu textarea, langsung memasukkan konten ke dalam variabel JavaScript -->
                <div id="formattedContent" class="text-lg leading-relaxed mb-6"></div>
            </div>
        </div>
    </div>
    
    

    <!-- Comments section start -->
    <%-include('partials/comment'); %>
    <!-- Comments section end -->
    

    
    <div class="mt-8">
        <!-- Footer start -->
        <%-include('partials/footer'); %>
        <!-- Footer end -->
    </div>


    <script>
        $(document).ready(function() {
            // Ambil konten dari post dan simpan dalam variabel JavaScript
            var content = `<%= post.content %>`;
            
            // Definisikan fungsi formatText()
            function formatText() {
                // Mengonversi tag <b> menjadi elemen bold
                var formattedContent = content.replace(/\[b\](.*?)\[\/b\]/g, '<b>$1</b>');
                // Mengonversi karakter baris baru menjadi tag <br>
                formattedContent = formattedContent.replace(/\n/g, '<br>');
                // Membersihkan HTML dan membuat tautan aktif menggunakan DOMPurify
                formattedContent = DOMPurify.sanitize(formattedContent, { ADD_ATTR: ['target'] });
                // Menampilkan konten yang sudah diformat
                $('#formattedContent').html(formattedContent);
            }

            // Panggil fungsi formatText() saat halaman dimuat
            formatText();
        });
    </script>
</body>
</html>
